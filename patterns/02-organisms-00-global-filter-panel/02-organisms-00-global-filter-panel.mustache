&lt;div class=&quot;filter-panel&quot;
  data-js-component=&quot;filterAccordion&quot;
  data-accordion-panel=&quot;.filter-panel__section&quot;
  data-accordion-content=&quot;.filter-panel__selection&quot;
  data-accordion-trigger=&quot;.filter-panel__toggle&quot;&gt;
  &lt;form class=&quot;filter-panel__form&quot; action=&quot;&quot;&gt;

    {{#form_header}}
    &lt;div class=&quot;filter-panel__header&quot;
      data-js-component=&quot;panelSubmitDisplay&quot;
      data-panel-submit=&quot;.btn-ghost&quot;
      data-panel-close=&quot;.icon-close&quot;&gt;
      &lt;button class=&quot;btn-ghost btn-ghost--sm btn-ghost--secondary&quot;&gt;{{btn_text}}&lt;/button&gt;
      &lt;svg class=&quot;icon icon-close&quot;&gt;
        {{&gt; molecules-svg-use-tag }}
      &lt;/svg&gt;
    &lt;/div&gt;
    {{/form_header}}

    {{#form_body}}
    &lt;div class=&quot;filter-panel__body&quot;&gt;

      {{#sections}}
      &lt;div class=&quot;filter-panel__section&quot;&gt;

        &lt;h3 class=&quot;filter-panel__section-title&quot;&gt;{{name}}&lt;/h3&gt;

        &lt;div class=&quot;filter-panel__selection&quot;&gt;
          {{#inputs}}
          &lt;div class=&quot;filter-panel__col&quot;&gt;
            &lt;div class=&quot;custom-checkbox&quot;&gt;
              &lt;label class=&quot;custom-checkbox__wrapper&quot;&gt;
                &lt;input class=&quot;custom-checkbox__input&quot; type=&quot;checkbox&quot; name=&quot;{{name}}&quot;&gt;
                &lt;span class=&quot;custom-checkbox__box&quot;&gt;&lt;/span&gt;
                &lt;span class=&quot;custom-checkbox__text&quot;&gt;{{text}}&lt;/span&gt;
              &lt;/label&gt;
            &lt;/div&gt;
          &lt;/div&gt;
          {{/inputs}}
        &lt;/div&gt;

        {{#more?}}
        &lt;span class=&quot;filter-panel__toggle&quot;&gt;More&lt;/span&gt;
        {{/more?}}
      &lt;/div&gt;
      {{/sections}}
    &lt;/div&gt;
    {{/form_body}}


    {{#form_footer}}
    &lt;div class=&quot;show-at-md&quot;&gt;
      &lt;div class=&quot;filter-panel__footer&quot;&gt;
        &lt;button class=&quot;btn-ghost btn-ghost--sm btn-ghost--secondary&quot;&gt;{{btn_text}}&lt;/button&gt;
      &lt;/div&gt;
    &lt;/div&gt;
    {{/form_footer}}
  &lt;/form&gt;
&lt;/div&gt;